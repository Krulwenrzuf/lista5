<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lista5.Editable">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefWidth="760.0" spacing="10.0">
      <children>
         <ChoiceBox fx:id="wyborFigury" prefWidth="150.0" />
          <Button onAction="#onHelloButtonClick" text="Wyczyść" />
         <ToggleButton mnemonicParsing="false" onAction="#editShape" text="Edytuj" />
         <TextField fx:id="XGonField" onKeyTyped="#customXGon" promptText="Dowolny x-ścian" />
      </children>
   </HBox>
   <Pane fx:id="canvas" style="-fx-background-color: F0F0F0; -fx-border-color: gray;" VBox.vgrow="ALWAYS" />

    <Label fx:id="welcomeText" />
</VBox>
